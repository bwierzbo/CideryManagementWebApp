{
  "name": "cidery-management-app",
  "version": "0.1.0",
  "private": true,
  "description": "Cidery Management MVP - Replace Excel with a web app to track vendor purchases → pressing → fermentation → packaging → inventory",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "concurrently \"pnpm --filter web run dev\" \"pnpm --filter worker run dev\"",
    "lint": "pnpm -r run lint",
    "typecheck": "pnpm -r run typecheck",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:snapshots": "vitest run tests/audit/",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:codegen": "playwright codegen http://localhost:3000",
    "quality:check": "tsx scripts/quality-dashboard.ts generate",
    "performance:check": "tsx scripts/performance-monitor.ts analyze",
    "coverage:trend": "tsx scripts/coverage-trend-tracker.ts report",
    "format": "pnpm -r run format",
    "clean": "pnpm -r run clean && rm -rf node_modules coverage test-results",
    "db:generate": "pnpm --filter db run generate",
    "db:migrate": "pnpm --filter db run migrate",
    "db:seed": "pnpm --filter db run seed",
    "analysis:all": "tsx analysis/scripts/report-generator.ts",
    "analysis:baseline": "tsx analysis/scripts/report-generator.ts --baseline",
    "analysis:dead-code": "knip --config analysis/config/knip.json",
    "analysis:ts-prune": "ts-prune",
    "analysis:deps": "depcheck --config analysis/config/depcheck.json",
    "analysis:circular": "madge --circular apps/web/src packages/*/src",
    "analysis:assets": "tsx analysis/scripts/asset-scanner.ts",
    "analysis:database": "tsx analysis/scripts/db-scanner.ts",
    "analysis:schema-mapping": "tsx analysis/scripts/schema-mapper.ts",
    "analysis:usage-patterns": "tsx analysis/scripts/db-usage-scanner.ts",
    "analysis:unused-elements": "tsx analysis/scripts/unused-elements-analyzer.ts",
    "analysis:drift": "tsx analysis/scripts/drift-analyzer.ts",
    "analysis:performance": "tsx analysis/scripts/performance-assessor.ts",
    "analysis:database-full": "tsx analysis/scripts/schema-mapper.ts && tsx analysis/scripts/db-usage-scanner.ts && tsx analysis/scripts/unused-elements-analyzer.ts && tsx analysis/scripts/drift-analyzer.ts && tsx analysis/scripts/performance-assessor.ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/glob": "^9.0.0",
    "@types/node": "^20.11.0",
    "@types/typescript": "^2.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "concurrently": "^8.2.2",
    "depcheck": "^1.4.7",
    "glob": "^11.0.3",
    "knip": "^5.64.1",
    "madge": "^8.0.0",
    "prettier": "^3.2.0",
    "ts-prune": "^0.10.3",
    "tsx": "^4.20.5",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^18.2.0",
      "@types/react-dom": "^18.2.0"
    }
  }
}