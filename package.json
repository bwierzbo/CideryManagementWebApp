{
  "name": "cidery-management-app",
  "version": "0.1.0",
  "private": true,
  "description": "Cidery Management MVP - Replace Excel with a web app to track vendor purchases → pressing → fermentation → packaging → inventory",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "concurrently \"pnpm --filter web run dev\" \"pnpm --filter worker run dev\"",
    "lint": "pnpm -r run lint",
    "typecheck": "pnpm -r run typecheck",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:snapshots": "vitest run tests/audit/",
    "quality:check": "tsx scripts/quality-dashboard.ts generate",
    "performance:check": "tsx scripts/performance-monitor.ts analyze",
    "coverage:trend": "tsx scripts/coverage-trend-tracker.ts report",
    "format": "pnpm -r run format",
    "clean": "pnpm -r run clean && rm -rf node_modules coverage",
    "db:generate": "pnpm --filter db run generate",
    "db:migrate": "pnpm --filter db run migrate",
    "db:seed": "pnpm --filter db run seed"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "concurrently": "^8.2.2",
    "prettier": "^3.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^18.2.0",
      "@types/react-dom": "^18.2.0"
    }
  }
}