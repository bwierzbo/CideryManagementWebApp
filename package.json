{
  "name": "cidery-management-app",
  "version": "0.1.0",
  "private": true,
  "description": "Cidery Management MVP - Replace Excel with a web app to track vendor purchases → pressing → fermentation → packaging → inventory",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "concurrently \"pnpm --filter web run dev\" \"pnpm --filter worker run dev\"",
    "lint": "pnpm -r run lint",
    "typecheck": "pnpm -r run typecheck",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:snapshots": "vitest run tests/audit/",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:codegen": "playwright codegen http://localhost:3000",
    "quality:check": "tsx scripts/quality-dashboard.ts generate",
    "performance:check": "tsx scripts/performance-monitor.ts analyze",
    "coverage:trend": "tsx scripts/coverage-trend-tracker.ts report",
    "format": "pnpm -r run format",
    "clean": "pnpm -r run clean && rm -rf node_modules coverage test-results",
    "db:generate": "pnpm --filter db run generate",
    "db:migrate": "pnpm --filter db run migrate",
    "db:seed": "pnpm --filter db run seed",
    "analyze:all": "tsx .claude/scripts/cleanup/analyze-all.ts",
    "analyze:baseline": "tsx .claude/scripts/cleanup/analyze-all.ts --baseline",
    "analyze:compare": "tsx .claude/scripts/cleanup/analyze-all.ts compare",
    "analyze:code": "npx knip --config knip.json && npx ts-prune --project tsconfig.base.json",
    "analyze:deps": "npx depcheck --json",
    "analyze:circular": "npx madge --circular --json apps/web/src packages/*/src",
    "analyze:assets": "tsx .claude/scripts/cleanup/asset-scanner.ts",
    "analyze:database": "tsx .claude/scripts/cleanup/database-scanner.ts",
    "analyze:consolidate": "tsx .claude/scripts/cleanup/report-consolidator.ts",
    "analyze:verbose": "tsx .claude/scripts/cleanup/analyze-all.ts --verbose",
    "analysis:dead-code": "npx knip --config knip.json --reporter json",
    "analysis:ts-prune": "npx ts-prune --project tsconfig.base.json",
    "analysis:deps": "npx depcheck --json",
    "analysis:circular": "npx madge --circular --json apps/web/src packages/*/src",
    "analysis:assets": "tsx .claude/scripts/cleanup/asset-scanner.ts",
    "analysis:database": "tsx .claude/scripts/cleanup/database-scanner.ts",
    "analysis:bundle": "tsx .claude/scripts/ci/bundle-analyzer.ts",
    "performance:monitor": "tsx .claude/scripts/ci/performance-monitor.ts",
    "performance:analyze": "tsx .claude/scripts/ci/performance-monitor.ts analyze",
    "quality:validate": "tsx .claude/scripts/ci/quality-gates-manager.ts validate",
    "quality:config": "tsx .claude/scripts/ci/quality-gates-manager.ts config",
    "quality:thresholds": "tsx .claude/scripts/ci/quality-gates-manager.ts thresholds"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.5.4",
    "@playwright/test": "^1.55.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "concurrently": "^8.2.2",
    "depcheck": "^1.4.7",
    "glob": "^11.0.3",
    "js-yaml": "^4.1.0",
    "knip": "^5.64.1",
    "madge": "^8.0.0",
    "prettier": "^3.2.0",
    "ts-prune": "^0.10.3",
    "tsx": "^4.20.5",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "webpack-bundle-analyzer": "^4.10.0"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^18.2.0",
      "@types/react-dom": "^18.2.0"
    }
  }
}