{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "migrations",
    "src/cli/**/*",
    "src/config/**/*",
    "src/migrations/**/*",
    "src/monitoring/**/*",
    "src/schema-dual-support.ts",
    "src/test/**/*",
    "src/scripts/**/*"
  ]
}
